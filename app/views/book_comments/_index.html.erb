<% comments.each do |comment| %>
<table>
	<tr>
		<td>
            <%= attachment_image_tag(comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg") %><br>
            <%= comment.user.name %>
        </td>
        <td>
            <%= comment.comment %>
        </td>
        <td>
            <%if comment.user == current_user %>
            	<%= link_to "Destroy",book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn-sm btn-danger" %>
            <% end %>
        </td>
    </tr>
</table>
<% end %>